graph G {
    // Define nodes with optional attributes
    A [label="Node A", color="red"];
    
    C [label="Node C", color="green"];
    D [label="Node D", color="yellow"];
    
    B [label="Node B", color="blue"];

    // Define edges with optional attributes
    A -- B [label="5", color="grey"];
    A -- C [label="3", color="grey"];
    B -- D [label="4", color="grey"];
    C -- D [label="2", color="grey"];
    D -- E [label="1", color="grey"];
    E -- A [label="2", color="grey"];

    // Set graph properties
    rankdir=LR;
    size="6,6";
    node [shape=circle];
    edge [style=solid];
}